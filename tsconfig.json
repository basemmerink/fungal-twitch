{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/server",
        "sourceMap": true,
        "declaration": false,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "importHelpers": false,
        "target": "es2015",
        "lib": [
            "es2018",
            "dom"
        ],
        "esModuleInterop": true
    },
    "include": ["src/**/*"],
    "angularCompilerOptions": {
        "fullTemplateTypeCheck": false,
        "strictInjectionParameters": false,
        "strictTemplates": false
    }
}
